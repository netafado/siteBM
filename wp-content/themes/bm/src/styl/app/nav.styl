.fechar-menu
    position: absolute
    right 10px
    top 10px
    cursor pointer
    img 
        max-width 40px


.menu-mob-flutuante
    display flex
    width: 100%
    height 100%
    position: fixed
    z-index 999999999
    top 0
    left 0;
    justify-content: center
    background-color alpha(white, 0.9)
.display-menu-mob
    flex-direction: column
    display: flex
    align-self: center
    justify-content: flex-end
    padding: 0

    li
        list-style: none
        text-align: center
        font-size: 20px
        text-transform: uppercase
        margin-top 10px
        a
            text-decoration: none
            color: $colors['cinza']
            transition: .3s
            &:hover
                color: $colors['main']
                font-weight: bold
            &.ativo
               color: $colors['main']
               font-weight: bold
        &.langLI
	        padding-top 9px
.display-menu
    display: flex
    justify-content: flex-end
    li
        list-style: none
        text-transform: uppercase
        margin-left: 30px
        padding-top: 11px;
        font-size remify(13px)
        position relative
        &.langLI
            padding-top: 8px
        & > a
            text-decoration: none
            color: $colors['cinza']
            transition: .3s
            position relative
            &::after
                position absolute
                bottom -4px
                left 0
                width 0
                transition .5s
                height 2px
                content " "
                background-color: $colors['main'] 
            &:hover
            &:focus
                &::after
                    width 100%

            &.active
                color: $colors['main']
                font-weight: 400
                &::after
                    width 100%


        .sub-menu
            visibility hidden
            position: absolute;
            left: -38px;
            top: 20px;
            transition: 1s
            opacity 0
            z-index 99
            li
                width: 100% 
                margin-left: 10px;
                white-space: nowrap;
        &.display-sub-menu[aria-expanded="true"]
            .sub-menu
                visibility: visible
                opacity 1


.menu-mob
    cursor pointer
    margin-top: 12px
    span.icon-bar
        margin-top 4px
        width: 30px
        height 4px
        display: block
        border-radius 3px
        background-color: $colors['verde']
    

.display-sub-menu
    &:after
        content: url('../img/arrow.png')
        position: absolute
        top: 0
        top: 12px;
        right: -14px;



@media screen and (max-width :1200px)
    .display-menu
        display: flex
        justify-content: flex-end
        li
            list-style: none
            text-transform: uppercase
            margin-left: 20px
            letter-spacing -0.2px
            padding-top: 12px;
            font-size remify(13px)
        .langLI
	        padding-top 9px
    .logo-nav
        display: block
        margin-left: auto
        margin-right: auto




