.ir-topo
    width 50px
    height 50px
    background-color: $colors["inverse"]
    position fixed
    bottom 10px
    right: 10px
    z-index: 999
    box-shadow: 2px 2px 1px lightgray

.seta
    padding-top: 5px
    padding-left: 3px
    animation: piscar 2s infinite

footer
    padding: 60px 0 0px 0px


.logo-biz
    background-color: darken($colors['main'], 20%)
    width: 100%
    padding: 10px 0
    margin-top: 50px
    text-align: center

.logo-biz-img
    margin: auto

.grande
    height:5px

footer
    .logo-footer
        text-align: right 

.footer-texto
    list-style: none
    margin-left: -40px
    li
        margin-bottom: 10px
        a
            color: $colors["inverse"]

@media screen and (max-width: $queries['large'])
    .text-banner-2
        line-height: 0.2

@media screen and (max-width: $queries['medium'])
    .footer-texto
        text-align: center
        margin-top 20px
        img 
            margin: auto
    footer
        .logo-footer
            text-align: center 
        padding: 60px 0 30px 0px 
        .copyright
            text-align: center
            img 
                margin: 0 auto
        .rede-sociais
            text-align: center
            margin: 30px 0
        .contato
            text-align: center

@media screen and (max-width: $queries['small'])
    footer
        padding: 60px 0 0 0px 
        .copyright
        .rede-sociais
        .contato
        p
            font-size: 12px

