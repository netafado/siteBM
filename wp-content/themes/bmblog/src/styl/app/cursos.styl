.cursos-flex
    display: flex
    justify-content: center
    flex-wrap: wrap
    & > *
        width: 23%
        padding 20px
        border 1px solid lightgray
        font-size: remify(16px)
        box-shadow: 2px 2px 2px lightgray
        line-height: 20px
        margin-top 50px
        margin-right: 50px
        p
            margin 0

@media screen and (max-width: $queries['small'])
    .cursos-flex
        & > *
            width: 100%
            margin-top 10px
            margin-right: 10px
