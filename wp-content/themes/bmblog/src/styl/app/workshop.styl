.padding-ws
    padding-left: 0

.resultados-ws
    padding-left: 0
    list-style none
    display flex 
    flex-wrap wrap
    li
        border-bottom: 1px solid #e8ebf0;
        margin-bottom: 20px;
        flex-basis: 33%;
        padding-bottom: 12px;
        div
            height: 130px;


.curso-ws
    filter: grayscale(100%)
    cursor pointer
    border-radius: 10px;
    transition 0.5s

.curso-ws-ativo
    filter: grayscale(1%)
    border: 2px solid #1cdc64;
    box-shadow: 0px 0px 8px #24c85f;

.width-ws
    width: 15%;

#filtrarCursos
    border-radius: 8px

@media screen and (max-width: 800px)
    .resultados-ws
        li
            flex-basis: 50%;

@media screen and (max-width: 700px)
    .width-ws
        width: 40%;   
    .resultados-ws
        li
            div
                height: 180px;       

@media screen and (max-width: 350px)
    .resultados-ws
        flex-direction: column
        li
            div
                height: 100px;