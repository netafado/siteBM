
.mainTitle
    @extends .uppercase
    @extends .text-main

.banners
    @extends .padding-zero
.img-back-leort
    @extends .back-contain
    background-image: url('../img/background-topo.png')
    background-repeat: no-repeat
    background-position: center center


.cat
    box-shadow 0 0 3px lightgray
    padding 30px
    background #f7f7f7
    margin 0 10px
    margin-top 20px
    width 19%
    flex 1
    transition 0.4 filter
    &:hover 
        img
            filter brightness(2)
    p
        margin 0
        padding 0
        line-height 1
        margin-top 10px
        letter-spacing -0.2px
        color: $colors['main']
        font-weight 300

.tec-texto
    margin-top: 50px


.bg-imagem-tec
    @extends .back-cover
    background-image: url('../img/fundo-footer.jpg')
    background-position: bottom center;
    background-repeat: no-repeat;
    background-size: auto;
#c-banner
    padding-top: 80px;
    z-index: 999;
    position: relative;


.icon-acoes
    max-width 50px
    margin-right: 10px

.bandeira
    @extends .absolute
    bottom: -30px
    left 0
    z-index 9999
.section
    padding 100px 0
.leort-desc
    box-shadow: 0px 4px 1px $shadow-color
.marca-desc
    margin-top: 10px
    margin-bottom: 30px

.argila-title 
    text-transform uppercase
    font-weight 100
    letter-spacing 2px
.item-artigos
    padding 25px

.text-leort
    margin-top: 130px

.seta-left
.seta-right
    position absolute
    top 50%
    cursor pointer
    z-index 99
.seta-left
    left -70px
.seta-right
    right -70px

.line-verde
    width: 100%
    height 1px
    background-image: url(../img/linha-verde.png)
    background-position: center center
.line-small
    background-image: url(../img/linha-verde.png)
    background-position: center center
    background-size: contain
    height 2px



.leort-image-text
    padding-top 180px
    padding-left 30px
    .segredo
        padding-top 40px

.img-shadow
    border: 4px solid white;
    box-shadow: 2px 2px 3px lightgrey;

.text-banner-2
    margin-top 25px
    padding-left: 25px
    h5
        line-height: 0.7
        span
            font-size: 30px
            font-weight: light

    img
        margin-top 20px

#single-page
    @extends .bg-light-gray

.bg-tec 
    background-image url('../img/background-tec.jpg')
    background-position center top
    background-repeat no-repeat

.img-resultados
    max-width auto
    height auto

.square
    &:after
        content: ""
        display: block
        padding-bottom: 100%

.banner-blog2
    background-position center center

.texto-banner-1
    font-size: 30px
    line-height: 1.2

input, input.form-control
    .blog-contato
        background-color: #ffffff
        color: #555
        background-repeat no-repeat


.img-author
    border-radius 50%
    background-repeat no-repeat
    background-size cover
    background-position center center
    border: 3px solid $colors['main']
    margin-top: 20px;

.slick-dots li button:before {
    font-family: slick;
    font-size: 12px;
    line-height: 20px;
    position: absolute;
    top: 0;
    left: 0;
    width: 20px;
    height: 20px;
    content: 'â€¢';
    text-align: center;
    opacity: .25;
    color: #000;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

@media screen and (max-width: $queries['large'])
    .leort-image-text
        padding-top 20px
        padding-bottom: 0
    .text-leort
        margin-top: 0px
    .bandeira
        max-width: 550px;
        bottom: 0;
        left: -70px;
    .seta-left
        left -10px
    .seta-right
        right -10px

@media screen and (max-width: $queries['medium'])
    .cat
        width 50%
    .bandeira
        bottom: -20px;
        max-width: 450px;
        left: -150px;
    footer
        .container
            div
                margin-top 20px
    .text-banner-2
        text-align: center
        p
            line-height: 1
            text-align: center
        img
            margin auto
            margin-top 20px
    .section
        padding 50px 0
        padding-bottom: 80px
    .leort-image-text
        padding-top 60px
        padding-bottom: 60px
    .img-back-leort
        text-align: center

    img.leort-banner1
        margin auto
    #c-banner
        padding-top 10px        
    .text-leort
        margin-top: 20px

    .leort-banner1
        margin 0 0 0 0
    .img-back-leort
        img 
            max-width 280px
    .seta-left
        left 0
    .seta-right
        right 0

@media screen and (max-width: $queries['small'])
    .tec-texto
        margin-top: 10px
    .seta-left
        left 0
    .seta-right
        right 0
    .cat
        width 99%
    .leort-desc
        margin-top 40px
    //tetste
    .item-c
        h1
        p 
            text-align: center
        p 
            font-size: 18px
            line-height: 1.2
            margin-bottom: 10px
            img
                margin: auto

        .text-banner
            img
                margin: auto

@media screen and (max-width: 1286px)
    .seta-left
        left -20px
    .seta-right
        right -20px

@media screen and (max-width: 1024px)
    .language-w
        margin-top 10px
    .seta-left
        left -10px
    .seta-right
        right -10px
@media screen and (max-width: 390px)
    .language-w
        margin-top 0
    .bandeira
        bottom: -20px;     
        max-width: 420px;     
        left: -120px;


@media screen and (max-width: 340px)
    .img-back-leort img
        max-width 200px
        